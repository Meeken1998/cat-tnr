.s-cat--page {
  width: 100vw;
  min-height: 100vh;
}

.s-cat--category-bar {
  box-shadow: 0px 5rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.s-cat--info-box {
  width: 100%;
  min-height: calc(100vh - 104px);
  background-color: #f7f8fa;
}

.s-cat--tool-bar {
  width: 100%;
  padding-right: 12px;
}

.s-cat--404 {
  width: 100%;
  height: 80vh;
}

.s-cat--404>image {
  width: 240rpx;
  height: 240rpx;
}

.s-cat--404>view {
  color: #888;
  font-size: 32rpx;
  margin-top: 28rpx;
}

.s-cat--404>view.clear-search {
  color: #7aa5eb;
  margin-top: 11rpx;
}

.loading {
  width: 100vw;
  padding-top: 44rpx;
}

