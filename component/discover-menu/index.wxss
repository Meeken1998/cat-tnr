@import '../../app.wxss';

.s-discover--menu {
  width: calc(100vw - 66rpx);
  min-height: 100rpx;
  margin: 0 33rpx 22rpx 33rpx;
  border: 1px solid #f3f3f3;
  border-radius: 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  overflow: hidden;
  background-image: url(https://img.meek3n.cn/mew.jpeg);
  background-repeat: no-repeat;
  background-size: 120% 120%;
  background-position: center center;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 4rpx 8rpx 0rpx, rgba(0, 0, 0, 0.05) 0rpx 6rpx 20rpx 0rpx;
}

.s-discover--menu-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-start;
  padding: 0 0 22rpx 33rpx;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(255, 255, 255, 1);
  font-weight: 500;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.6);
  transition: all .3s;
}

.s-discover--menu-item.hover {
  background-color: rgba(255, 255, 255, 0.2);
  box-shadow: inset 0 0 11rpx rgba(0, 0, 0, 0.6);
}

.jan-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
}