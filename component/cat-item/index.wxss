@import '/static/css/global.wxss';

.s-cat--item {
  width: 100%;
  font-size: 32rpx;
  padding: 22rpx 36rpx;
  background-color: #fff;
}

.s-cat--item.hover {
  background-color: #f3f3f3;
}

.s-cat--item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.s-cat--item .name {
  width: calc(100% - 100rpx - 36rpx);
  color: #444;
}

.divider-line {
  width: 100%;
  height: 1rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}