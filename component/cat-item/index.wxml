<view class="s-cat--item flex-row-between-center" hover-class="hover" bindtap="handleViewCat">
	<image class="avatar" src="{{ options.photo.length ? options.photo[0] : '' }}" mode="aspectFill"></image>
	<view class="name">{{ options.name }}</view>
</view>
<view class="divider-line">
	<view style="{{ border ? 'width: calc(100% - 100rpx - 36rpx - 22rpx);margin-left: calc(100rpx + 36rpx + 22rpx);height: 1rpx;background: #f3f3f3;' : 'display: none;' }}"></view>
</view>